@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <form ng-controller="FormCtrl">
        <div class="row">
            <div class="col-xs-3">
            </div>
            <div class="col-xs-1">
                <select ng-model="method">
                    <option value="GET">GET</option>
                    <option value="HEAD">HEAD</option>
                </select>
            </div>
            <div class="form-group col-xs-3">
                <input type="text" class="form-control" id="urlinput" placeholder="Enter url" ng-model="url">
            </div>
            <div class="col-xs-1">
                <button class="btn" id="fetchbtn" ng-click="MakeRequest()">Fetch New Response</button>
                <button class="btn" id="storebtn" ng-click="Store()">Store Last Response</button>
                <button class="btn" id="viewbtn" ng-click="ShowAll()">View Stored Responses</button>
                <button class="btn" id="clearbtn" ng-click="Clear()">Clear All Responses</button>
            </div>
        </div>
    </form>
    <div>
        <p id="outputTarget"></p>
    </div>
</div>
